<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4DE"
    tools:context=".VehicleActivity">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/vehicleNumberLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:text="Vehicle No: " />

        <TextView
            android:id="@+id/vehicleNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/vehicleNumberLbl"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:minLines="2"
            android:textSize="15dp" />
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_below="@id/vehicleNumberLbl"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/customerNameLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@id/vehicleNumberLbl"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:text="Customer : " />

        <TextView
            android:id="@+id/customerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicleNumberLbl"
            android:layout_toRightOf="@id/customerNameLbl"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:minLines="2"
            android:layout_marginRight="20dp"
            android:textSize="15dp" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_below="@id/customerNameLbl"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/chassisNumberLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@id/customerNameLbl"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:text="Chassis No: " />

        <TextView
            android:id="@+id/chassisNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerNameLbl"
            android:layout_toRightOf="@id/chassisNumberLbl"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:minLines="2"
            android:textSize="15dp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_below="@id/chassisNumberLbl"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/loanNumberLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@id/chassisNumberLbl"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:text="Loan No: " />

        <TextView
            android:id="@+id/loanNumberLblText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chassisNumberLbl"
            android:layout_toRightOf="@id/loanNumberLbl"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:minLines="2"
            android:textSize="15dp" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_below="@id/loanNumberLbl"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/agencyNameLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@id/loanNumberLbl"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:text="Agency : " />

        <TextView
            android:id="@+id/agencyNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loanNumberLbl"
            android:layout_toRightOf="@id/agencyNameLbl"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="10dp"
            android:minLines="2"
            android:layout_marginBottom="10dp"
            android:textSize="15dp" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_below="@id/agencyNameLbl"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/branchNameLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@id/agencyNameLbl"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:text="Branch : " />

        <TextView
            android:id="@+id/branchNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/agencyNameLbl"
            android:layout_toRightOf="@id/branchNameLbl"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:minLines="2"
            android:textSize="15dp" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_below="@id/branchNameLbl"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/agentNameLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@id/branchNameLbl"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:text="Agent : " />

        <TextView
            android:id="@+id/agentNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/branchNameLbl"
            android:layout_toRightOf="@id/agentNameLbl"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:minLines="2"
            android:textSize="15dp" />

        <Button
            android:id="@+id/sendSms"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/agentNameLbl"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corners"
            android:text="SEND SMS"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/parkedVehicle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/sendSms"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corners"
            android:text="PARKED VEHICLE"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/parkedVehicle"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corners"
            android:text="UPLOAD IMAGES"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>



</RelativeLayout>
